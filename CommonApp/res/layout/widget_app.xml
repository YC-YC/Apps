<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.zhonghong.commonappwidget"
    android:layout_width="210dp"
    android:layout_height="300dp"
    android:gravity="center_horizontal"
    android:padding="4dp"
    android:background="@drawable/fm_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal" 
        android:layout_marginTop="20dp">

        <LinearLayout
            android:id="@+id/app1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:visibility="invisible"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/app1_app_pic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_launcher"/>

            <TextView
                android:id="@+id/app1_app_name"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:textColor="@android:color/black"
                android:text="@string/app1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/app2"
           android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
             android:visibility="invisible"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/app2_app_pic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/app2_app_name"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:textColor="@android:color/black"
                android:text="@string/app2" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/app3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
             android:visibility="invisible"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/app3_app_pic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/app3_app_name"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:textColor="@android:color/black"
                android:text="@string/app3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/app4"
           android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
             android:visibility="invisible"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/app4_app_pic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/app4_app_name"
               android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:textColor="@android:color/black"
                android:text="@string/app4" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/settime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/settime" />

</LinearLayout>